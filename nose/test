from appium import webdriver
from appium.options.ios import XCUITestOptions  # Import the correct options for iOS
import time

# Set Desired Capabilities using XCUITestOptions
options = XCUITestOptions()
options.platform_name = "iOS"
options.platform_version = "18.6"  # Change to your iOS version
options.device_name = "iPhone 16 Pro"  # Update with your device/simulator name
options.app = "/Users/tamakifujino/Library/Developer/Xcode/DerivedData/YourProjectName-abc123xyz/Build/Products/Debug-iphonesimulator/YourApp.app"  # Provide the correct path to your .app or .ipa file
options.automation_name = "XCUITest"
options.no_reset = True  # Avoids reinstalling the app every time

# Start Appium Session
driver = webdriver.Remote("http://localhost:4723", options=options)  # No need for /wd/hub

# Wait for the app to load
time.sleep(5)

# Example: Find an element and interact with it
element = driver.find_element("accessibility id", "LoginButton")
element.click()

# Close the session
driver.quit()
